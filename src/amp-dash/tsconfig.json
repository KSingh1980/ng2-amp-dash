{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../lib",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "types": []
  },
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../../aot",
    "annotateForClosureCompiler": true
  }
}